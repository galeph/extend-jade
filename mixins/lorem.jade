//- new sentece after N words


//- first letter to uppercase
mixin capitalize(string)
	= string.charAt(0).toUpperCase() + string.slice(1)
//- begin a new sentence
mixin beginSentence(string)
	= '. ' 
	mixin capitalize(string)


 //- Basic in a html

mixin MetaBasic()
	meta(charset='utf-8')
	meta(http-equiv='X-UA-Compatible', content='IE=edge')
	meta( name="viewport" content="width=device-width, initial-scale=1" )
	link( rel="shortcut icon",href="favicon.ico")

//- DataMeta
mixin DataMeta(jsonld, ogpData, other)
	each val, index in ogpData
		meta(property="og:#{index}", content="#{val}")
	each val, index in other
		meta(property="#{index}", content="#{val}")
	if jsonld
		script( type="application/ld+json" )= JSON.stringify(jsonld)
